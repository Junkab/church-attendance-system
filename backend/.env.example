# ============================================================================
# DATABASE CONFIGURATION
# ============================================================================

# For Railway Production:
DB_HOST=mysql.railway.internal
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_railway_mysql_password_here
DB_NAME=railway

# For Local Development (uncomment and modify):
# DB_HOST=localhost
# DB_PORT=3306
# DB_USER=root
# DB_PASSWORD=your_local_mysql_password
# DB_NAME=church_attendance

# ============================================================================
# SERVER CONFIGURATION
# ============================================================================

# Application port (Railway will override this)
PORT=3001

# Frontend URL for CORS (must match exactly)
# Production (Render):
FRONTEND_ORIGIN=https://church-frontend-ql69.onrender.com

# Local Development (uncomment if needed):
# FRONTEND_ORIGIN=http://localhost:3000

# ============================================================================
# ENVIRONMENT TYPE
# ============================================================================

# production | development
NODE_ENV=production

